{
    "mcpServers": {
        "puppeteer": {
            "command": "npx",
            "args": [
                "-p",
                "@modelcontextprotocol/server-puppeteer",
                "-c",
                "mcp-server-puppeteer"
            ],
            "env": {}
        },
        "github": {
            "command": "npx",
            "args": [
                "-p",
                "@modelcontextprotocol/server-github",
                "-c",
                "mcp-server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
            }
        },
        "slack": {
            "command": "npx",
            "args": [
                "-p",
                "@modelcontextprotocol/server-slack",
                "-c",
                "mcp-server-slack"
            ],
            "env": {
                "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
                "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
            }
        },
        "context7": {
            "command": "npx",
            "args": [
                "-p",
                "@upstash/context7-mcp@latest",
                "-c",
                "context7-mcp"
            ]
        },
        "taskmaster-ai": {
            "command": "npx",
            "args": [
                "-y",
                "--package=task-master-ai",
                "task-master-ai"
            ],
            "env": {
                "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
                "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
            }
        },
        "discord": {
            "command": "/workspaces/project/.venv/bin/mcp-discord",
            "args": [],
            "env": {
                "DISCORD_TOKEN": "${DISCORD_TOKEN}",
                "DISCORD_CLIENT_ID": "${DISCORD_CLIENT_ID}",
                "DISCORD_GUILD_ID": "${DISCORD_GUILD_ID}",
                "DISCORD_CHANNEL_ID": "${DISCORD_CHANNEL_ID}",
                "DISCORD_BOT_PREFIX": "!",
                "DISCORD_LOG_LEVEL": "info",
                "DEFAULT_SERVER_ID": "${DISCORD_GUILD_ID}"
            }
        },
        "internal-chat": {
            "command": "/workspaces/project/.venv/bin/internal-chat-mcp",
            "args": [
                "--mode",
                "stdio"
            ],
            "env": {
                "INTERNAL_CHAT_TEAM_ID": "${INTERNAL_CHAT_TEAM_ID}",
                "INTERNAL_CHAT_USER": "${INTERNAL_CHAT_USER}"
            }
        }
    }
}