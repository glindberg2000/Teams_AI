{
    "mcpServers": {
        "puppeteer": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-puppeteer"
            ],
            "env": {}
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_testtesttesttesttesttesttesttes2  # Required: GitHub PAT for this role"
            }
        },
        "slack": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-slack"
            ],
            "env": {
                "SLACK_BOT_TOKEN": "xoxb-test123456789012345678901235  # Required: Bot token for this role",
                "SLACK_TEAM_ID": "T12TEST345  # Same as SLACK_TEAM_ID"
            }
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp@latest"
            ]
        },
        "taskmaster-ai": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-taskmaster"
            ],
            "env": {
                "ANTHROPIC_API_KEY": "sk-ant-test123456789012345678901234  # Required: Get from https://console.anthropic.com",
                "PERPLEXITY_API_KEY": "pplx-test1234567890123456789012  # Optional: Get from https://perplexity.ai",
                "MODEL": "claude-3-sonnet-20240229",
                "PERPLEXITY_MODEL": "sonar-medium-online",
                "MAX_TOKENS": "64000",
                "TEMPERATURE": "0.2",
                "DEFAULT_SUBTASKS": "5",
                "DEFAULT_PRIORITY": "medium",
                "DEBUG": "false",
                "LOG_LEVEL": "info"
            }
        }
    }
}