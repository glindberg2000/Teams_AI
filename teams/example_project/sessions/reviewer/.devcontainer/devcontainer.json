{
    "name": "example_project-reviewer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {},
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=${localWorkspaceFolder}/workspace,target=/workspaces/project,type=bind"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "bash .devcontainer/scripts/setup_workspace.sh",
    "postStartCommand": "bash .devcontainer/scripts/refresh_configs.sh",
    "remoteEnv": {
        "LEDGERFLOW_REPO_URL": "https://github.com/your-org/your-repo"
    },
    "runArgs": [
        "--name",
        "windsurf-${localWorkspaceFolderBasename}",
        "--restart",
        "unless-stopped"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "codeium.windsurf"
            ]
        }
    },
    "init": true,
    "remoteUser": "root"
}